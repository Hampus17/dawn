{{ 'section-hero-large.css' | asset_url | stylesheet_tag }}

{%- liquid
  assign hero_classes = 'hero-large is-anim'
  if section.settings.overlay
    assign hero_classes = hero_classes | append: ' hero-large--overlay'
  endif
  if section.settings.align_content != blank
    assign hero_classes = hero_classes | append: ' hero-large--align-' | append: section.settings.align_content
  endif
-%}

<section class="{{ hero_classes }}" data-section-id="{{ section.id }}">
  <div class="hero-large__media">
    {%- if section.settings.image != blank -%}
      <picture>
        {%- if section.settings.image_mobile != blank -%}
          <source media="(max-width: 640px)" srcset="{{ section.settings.image_mobile | image_url: width: section.settings.image_mobile.width }}" sizes="100vw">
        {%- endif -%}
        <img
          src="{{ section.settings.image | image_url: width: 2048 }}"
          srcset="{{ section.settings.image | image_url: width: 1100 }} 1100w, {{ section.settings.image | image_url: width: 1500 }} 1500w, {{ section.settings.image | image_url: width: 2000 }} 2000w"
          sizes="(min-width: 1200px) 100vw, 100vw"
          alt="{{ section.settings.image.alt | default: section.settings.heading | default: section.settings.kicker | escape }}"
          loading="eager"
          fetchpriority="high"
          decoding="auto"
        >
      </picture>
    {%- else -%}
      {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
    {%- endif -%}
  </div>
  <div class="hero-large__content pad-section reveal">
    <div class="hero-large__copy">
      {%- if section.settings.kicker != blank -%}
        <p class="kicker type-sm">{{ section.settings.kicker | escape }}</p>
      {%- endif -%}
      {%- if section.settings.heading != blank -%}
        <h1 class="type-xxl">{{ section.settings.heading | escape }}</h1>
      {%- endif -%}
      {%- if section.settings.subcopy != blank -%}
        <div class="type-md">{{ section.settings.subcopy }}</div>
      {%- endif -%}
    </div>
    {%- if section.settings.cta_label != blank and section.settings.cta_url != blank -%}
      <div class="hero-large__actions tap-gap">
        <a href="{{ section.settings.cta_url }}" class="button button--primary tt-min tt-pad">
          {{ section.settings.cta_label | escape }}
        </a>
      </div>
    {%- endif -%}
  </div>
</section>

{% schema %}
{
  "name": "Hero — Large",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Desktop image"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Mobile image"
    },
    {
      "type": "text",
      "id": "kicker",
      "label": "Kicker"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "subcopy",
      "label": "Subcopy"
    },
    {
      "type": "text",
      "id": "cta_label",
      "label": "Button label"
    },
    {
      "type": "url",
      "id": "cta_url",
      "label": "Button link"
    },
    {
      "type": "checkbox",
      "id": "overlay",
      "label": "Enable overlay",
      "default": false
    },
    {
      "type": "select",
      "id": "align_content",
      "label": "Content alignment",
      "default": "bottom",
      "options": [
        {
          "value": "top",
          "label": "Top"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "bottom",
          "label": "Bottom"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero — Large",
      "category": "Hero"
    }
  ]
}
{% endschema %}
